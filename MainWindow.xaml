<Window x:Class="BubbleSortAnimatedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubbleSortAnimatedWPF"
        mc:Ignorable="d"
        Title="B U B B L E - S O R T | @Mullins182" Height="800" Width="1350" WindowState="Normal" WindowStartupLocation="CenterScreen" FontSize="10" Background="Blue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0" Width="auto"/>
            <ColumnDefinition MinWidth="0" Width="auto"/>
            <ColumnDefinition MinWidth="0" Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="0" Height="auto"/>
            <RowDefinition MinHeight="0" Height="auto"/>
            <RowDefinition MinHeight="0" Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Beginn UI-Elemente -->

        <TextBlock x:Name="BubbleSortBox" Grid.Row="1" Grid.Column="1" Height="500" Width="500" HorizontalAlignment="Center" Background="Black" Foreground="FloralWhite"
                   FontSize="40" TextAlignment="Center" TextDecorations="OverLine"/>
        <Label x:Name="BubbleSortBoxLabel" Grid.Column="1" Grid.Row="1" Width="auto" Height="auto" Content="Bubble Box" FontFamily="Chiller" FontSize="50" Foreground="OrangeRed"
               />

    </Grid>
</Window>
